<?xml version = "1.0" encoding = "UTF-8"?>


<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd' 'HH:mm:ss.SSS}] [%25.25class] [%thread] [%line] [%-5level] %m%n</pattern>
        </encoder>
    </appender>
    <appender name="TOMCAT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>C:/tmp/var/myTomcatLog.log</File>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd' 'HH:mm:ss.sss'Z'}] [%C] [%t] [%L] [%-5p] %m%n</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">

            <fileNamePattern>C:/tmp/var/logs/lambdajx.%d{yyyy-MM-dd HH}.%i.txt</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>

            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="org.apache.catalina" level="OFF">
        <appender-ref ref="TOMCAT" />
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="org.apache.coyote" level="OFF">
        <appender-ref ref="TOMCAT" />
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="org.apache.tomcat" level="OFF">
        <appender-ref ref="TOMCAT" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="org.springframework.boot" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.jakeesveld" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>
</configuration>